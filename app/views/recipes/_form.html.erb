<%= simple_form_for @recipe do |f| %>
  <% if @recipe.errors.any? %>
  <div id="errors">
    <h2><%= @recipe.errors.count %> prevented this recipe from saving </h2>
    <ul>
    <% @recipe.errors.full_message.each do |msg| %>
      <li><%= msg %></li>
    <%end%>

    </ul>
  </div>
  <%end%>

  <div class="field">
  <%= f.input :title %>
  </div>
  <div class="field">
  <%= f.input :description %>
  </div>
  <div class="field">
  <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<%end%>
